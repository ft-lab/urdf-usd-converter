<robot name="no_joint_mimic_joint">
  <link name="BaseLink">
    <visual>
      <origin rpy="0 0 0" xyz="-2 0 0.5"/>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <link name="link2">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <sphere radius="0.5"/>
      </geometry>
    </visual>
  </link>

  <joint name="JointA" type="fixed">
    <parent link="BaseLink"/>
    <child link="link2" />

    <!-- This is a deliberate mistake.  -->
    <!-- If joint is not specified. -->
    <mimic multiplier="2.0" offset="1.0"/>
  </joint>
</robot>
